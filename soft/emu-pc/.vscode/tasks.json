{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", "${workspaceFolder}",
                "-B", "${workspaceFolder}/build"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "CMake Debug Configure Car",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", "${workspaceFolder}",
                "-B", "${workspaceFolder}/build-car-debug",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "problemMatcher": []
        },
        {
            "label": "CMake Debug Configure Box",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", "${workspaceFolder}",
                "-B", "${workspaceFolder}/build-box-debug",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "problemMatcher": []
        },
        {
            "label": "CMake Build Gaspetto Car",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "${workspaceFolder}/build", "--target", "gaspetto_car"
            ],
            "dependsOn": ["CMake Configure"],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "CMake Build Gaspetto Box",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "${workspaceFolder}/build", "--target", "gaspetto_box"
            ],
            "dependsOn": ["CMake Configure"],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "CMake Build Gaspetto Car Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "${workspaceFolder}/build-car-debug", "--target", "gaspetto_car"
            ],
            "dependsOn": ["CMake Debug Configure Car"],
            "group": { "kind": "build", "isDefault": false },
            "presentation": { "clear": true },
            "problemMatcher": []
        },
        {
            "label": "CMake Build Gaspetto Box Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "${workspaceFolder}/build-box-debug", "--target", "gaspetto_box"
            ],
            "dependsOn": ["CMake Debug Configure Box"],
            "group": { "kind": "build", "isDefault": false },
            "presentation": { "clear": true },
            "problemMatcher": []
        }
    ]
}
