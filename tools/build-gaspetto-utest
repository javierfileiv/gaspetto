#!/bin/bash

# This script builds and runs all test presets for the emu-pc using CMake presets.
# Presets: tests, tests-sanitizers, tests-coverage

set -e

RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" &>/dev/null && pwd)"
PROJECT_ROOT="$(dirname "$SCRIPT_DIR")"
EMU_PC_DIR="$PROJECT_ROOT/soft/emu-pc"

echo -e "${BLUE}Building and running Gaspetto unit tests (all test presets)...${NC}"
echo -e "Project root: $PROJECT_ROOT"
echo -e "EMU PC directory: $EMU_PC_DIR"

cd "$EMU_PC_DIR"

# Detect number of CPU cores
NUM_CORES=$(nproc)
echo "Using $NUM_CORES cores for compilation"

# List of test presets with their build directories
declare -A PRESETS
PRESETS["tests"]="build-tests"
PRESETS["tests-sanitizers"]="build-sanitizers"
PRESETS["tests-coverage"]="build-coverage"

cleanup() {
	echo -e "${YELLOW}Cleaning up test build directories...${NC}"
	for build_dir in "${PRESETS[@]}"; do
		rm -rf "$EMU_PC_DIR/$build_dir"
	done
}

trap cleanup EXIT

for preset in "${!PRESETS[@]}"; do
	build_dir="${PRESETS[$preset]}"
	echo -e "${YELLOW}Building preset: $preset...${NC}"
	cmake --preset="$preset"
	cmake --build --preset="$preset" --parallel "$NUM_CORES"
	echo -e "${GREEN}Preset $preset built successfully.${NC}"

	echo -e "${YELLOW}Running tests for preset: $preset...${NC}"
	"$EMU_PC_DIR/$build_dir/bin/utest" --gtest_color=yes
	echo -e "${GREEN}Tests for $preset passed.${NC}"
done

echo -e "${GREEN}All test presets built and passed successfully.${NC}"
