#!/bin/bash

# This script builds all non-test presets for the emu-pc using CMake presets.
# Presets: car_debug, car_release, box_debug, box_release, nrf_sender

set -e

RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" &>/dev/null && pwd)"
PROJECT_ROOT="$(dirname "$SCRIPT_DIR")"
EMU_PC_DIR="$PROJECT_ROOT/soft/emu-pc"

echo -e "${BLUE}Building Gaspetto firmware for emu-pc (all presets)...${NC}"
echo -e "Project root: $PROJECT_ROOT"
echo -e "EMU PC directory: $EMU_PC_DIR"

cd "$EMU_PC_DIR"

# Detect number of CPU cores
NUM_CORES=$(nproc)
echo "Using $NUM_CORES cores for compilation"

# List of non-test presets to build
PRESETS=("car_debug" "car_release" "box_debug" "box_release" "nrf_sender")

cleanup() {
	echo -e "${YELLOW}Cleaning up build directories...${NC}"
	for preset in "${PRESETS[@]}"; do
		rm -rf "$EMU_PC_DIR/build-$preset"
	done
}

trap cleanup EXIT

for preset in "${PRESETS[@]}"; do
	echo -e "${YELLOW}Building preset: $preset...${NC}"
	cmake --preset="$preset"
	cmake --build --preset="$preset" --parallel "$NUM_CORES"
	echo -e "${GREEN}Preset $preset built successfully.${NC}"
done

echo -e "${GREEN}All presets built successfully.${NC}"
