#!/bin/bash

# This script runs cppcheck static analysis.

set -e

RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" &>/dev/null && pwd)"
PROJECT_ROOT="$(dirname "$SCRIPT_DIR")"
EMU_PC_DIR="$PROJECT_ROOT/soft/emu-pc"
BUILD_DIR="$EMU_PC_DIR/build-cppcheck"

echo -e "${BLUE}Running cppcheck static analysis...${NC}"
echo -e "Project root: $PROJECT_ROOT"
echo -e "EMU PC directory: $EMU_PC_DIR"

cd "$EMU_PC_DIR"

# Detect number of CPU cores
NUM_CORES=$(nproc)
echo "Using $NUM_CORES cores for compilation"

echo -e "${YELLOW}Configuring build with cppcheck...${NC}"
cmake -B "$BUILD_DIR" -DCMAKE_BUILD_TYPE=Debug -DENABLE_CPPCHECK=ON -DBUILD_GASPETTO_CAR=ON

echo -e "${YELLOW}Running cppcheck analysis...${NC}"
cmake --build "$BUILD_DIR" -j"$NUM_CORES"

echo -e "${GREEN}âœ“ Cppcheck analysis complete${NC}"
