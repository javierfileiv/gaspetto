#!/bin/bash

# This script builds tests with coverage and generates HTML report.

set -e

RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" &>/dev/null && pwd)"
PROJECT_ROOT="$(dirname "$SCRIPT_DIR")"
EMU_PC_DIR="$PROJECT_ROOT/soft/emu-pc"
BUILD_DIR="$EMU_PC_DIR/build-coverage"

echo -e "${BLUE}Building and running tests with coverage...${NC}"
echo -e "Project root: $PROJECT_ROOT"
echo -e "EMU PC directory: $EMU_PC_DIR"

# Detect number of CPU cores
NUM_CORES=$(nproc)
echo "Using $NUM_CORES cores for compilation"

# Build with coverage
echo -e "${YELLOW}Configuring coverage build...${NC}"
cmake --preset=tests-coverage -S "$EMU_PC_DIR"

echo -e "${YELLOW}Building tests...${NC}"
cmake --build "$BUILD_DIR" --parallel "$NUM_CORES"

# Run tests
echo -e "${YELLOW}Running tests...${NC}"
"$BUILD_DIR/bin/utest" --gtest_color=yes

# Generate coverage report
echo -e "${YELLOW}Generating coverage report...${NC}"
cd "$BUILD_DIR"
lcov --capture --directory . --output-file coverage.info --ignore-errors mismatch
lcov --remove coverage.info '/usr/*' '*/_deps/*' '*/tests/*' \
	--output-file coverage.info --ignore-errors mismatch,unused
genhtml coverage.info --output-directory coverage --ignore-errors mismatch

echo -e "${GREEN}Coverage report generated: $BUILD_DIR/coverage/index.html${NC}"

# Open report if running interactively
if [ -t 1 ]; then
	which xdg-open > /dev/null 2>&1 && xdg-open "$BUILD_DIR/coverage/index.html" || true
fi
